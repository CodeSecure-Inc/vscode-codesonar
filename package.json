{
    "name": "vscode-codesonar",
    "displayName": "CodeSonar",
    "description": "CodeSonar Static Analysis",
    "version": "0.0.1",
    "publisher": "Grammatech",
    "icon": "resources/grammatech.red-g-border.128x128.png",
    "license": "SEE LICENSE IN LICENSE.txt",
    "homepage": "https://www.grammatech.com/codesonar",
    "repository": {
        "type": "git",
        "url": ""
    },
    "engines": {
        "vscode": "^1.67.0"
    },
    "categories": [
        "Linters",
        "Other",
        "Programming Languages"
    ],
    "keywords": [
        "C++",
        "Code analysis",
        "SAST",
        "Security",
        "Static analysis"
    ],
    "activationEvents": [
        "onCommand:vscode-codesonar.generate-codesonar-json",
        "onCommand:vscode-codesonar.download-sarif"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "jsonValidation": [
            {
                "fileMatch": "codesonar.json",
                "url": "./resources/codesonar.schema.json"
            }
        ],
        "commands": [
            {
                "command": "vscode-codesonar.generate-codesonar-json",
                "title": "CodeSonar: Create codesonar.json"
            },
            {
                "command": "vscode-codesonar.download-sarif",
                "title": "CodeSonar: Download SARIF Analysis"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "vsix": "vsce package"
    },
    "devDependencies": {
        "@types/vscode": "^1.67.0",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "14.x",
        "@typescript-eslint/eslint-plugin": "^5.21.0",
        "@typescript-eslint/parser": "^5.21.0",
        "eslint": "^8.14.0",
        "glob": "^8.0.1",
        "mocha": "^9.2.2",
        "typescript": "^4.6.4",
        "@vscode/test-electron": "^2.1.3",
        "vsce": "1.80.0"
    }
}
